        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/edittxtphonephoto"-->
        <!--android:layout_alignLeft="@+id/txtviewaddphonephoto"-->
        <!--android:layout_alignStart="@+id/txtviewaddphonephoto"-->

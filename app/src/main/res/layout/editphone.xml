<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="300dp"
    android:layout_height="400dp"
    android:padding="10dp"
    android:layout_gravity="center"




    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/txtviewaddphonename"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittxtphonename"
        android:layout_alignLeft="@+id/txtviewaddphonename"
        android:layout_alignStart="@+id/txtviewaddphonename"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="10dp"


        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone brand"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/txtviewaddphonebrand"
        android:layout_below="@+id/edittxtphonename"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittxtphonebrand"
        android:layout_alignLeft="@+id/txtviewaddphonebrand"
        android:layout_alignStart="@+id/txtviewaddphonebrand"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/edittxtphonename"
       />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txtviewaddphoneprice"
        android:layout_below="@+id/txtviewaddphonebrand"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittxtphoneprice"
        android:layout_alignLeft="@+id/txtviewaddphoneprice"
        android:layout_alignStart="@+id/txtviewaddphoneprice"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/edittxtphonebrand"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txtviewaddphonecolor"
        android:layout_below="@+id/txtviewaddphoneprice"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittxtphonecolor"
        android:layout_alignLeft="@+id/txtviewaddphonecolor"
        android:layout_alignStart="@+id/txtviewaddphonecolor"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/edittxtphoneprice"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="photo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txtviewaddphonephoto"
        android:layout_below="@+id/txtviewaddphonecolor"
        />

